{
  "name": "crux-performance-analyzer",
  "version": "1.0.0",
  "description": "Full-stack web application for Chrome UX Report performance analysis",
  "main": "index.js",
  "scripts": {
    "start": "concurrently \"npm run backend\" \"npm run frontend\"",
    "backend": "cd backend && npm run dev",
    "frontend": "cd frontend && npm start",
    "build": "cd frontend && npm run build",
    "test": "cd frontend && npm test -- --coverage --watchAll=false",
    "lint": "npm run lint:backend && npm run lint:frontend",
    "lint:backend": "cd backend && npm run lint",
    "lint:frontend": "cd frontend && npm run lint",
    "install:all": "npm install && cd backend && npm install && cd ../frontend && npm install",
    "clean": "rm -rf node_modules backend/node_modules frontend/node_modules",
    "docker:build": "docker build -t crux-analyzer .",
    "docker:run": "docker run -p 5001:5001 crux-analyzer"
  },
  "keywords": [
    "performance",
    "crux",
    "web-vitals",
    "react",
    "nodejs",
    "express",
    "material-ui"
  ],
  "author": "Performance Analytics",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/crux-performance-analyzer.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/crux-performance-analyzer/issues"
  },
  "homepage": "https://github.com/your-username/crux-performance-analyzer#readme"
}